<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %> 
	<body>
		<%>if (locals.user != undefined) { %>
			<%- include('./partials/header-logueado.ejs')  %> 
		<% }else { %>
			  <%- include('./partials/header.ejs')  %> 
		<% } %> 
			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Registrate</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<div class="col-12">
						<% if (locals.errors) { %>
							<p style="color: red;" ><%= locals.errors.message %> </p>
					  <% } %>
						<form method="POST" action="/users/register" enctype="multipart/form-data">
							<h2 class="col-12">
							<label for=""> Email </label>
							<input name="email" type="email" placeholder="...@gmail.com">
							</h2>
							
							<h2 class="col-12">

								<label for=""> Nombre </label>
								<input type="text" name="nombre">

							</h2>
							<h2 class="col-12">

								<label for=""> Apellido </label>
								<input type="text" name="apellido">

							</h2>
							<h2 class="col-12">

								<label for=""> Nombre de Usuario </label>
								<input type="text" name="usuario">

							</h2>
							<h2 class="col-12">

								<label for="">Contraseña </label>
								<input type="password" name="contrasenia">

							</h2>
							<h2 class="col-12">

								<label for="">Fecha de nacimiento </label>
								<input name="fechaNacimiento" type="date" value="2002-09-18" >

							</h2>
							<h2 class="col-12">

								<label for="">Número de documento </label>
								<input type="number" name="dni" maxlength=8>

							</h2>
							<h2 class="col-12">

								<label for="">Foto de perfil </label>
								<input type="file" name="fotoDePerfil">

							</h2>
							
							<h2 class="col-12">

								<input type="submit" value="Enviar"></input>

							</h2>
						</form>
					</div>
				</div>


			</div>
			<!-- footer -->
			<%- include('./partials/footer') %>

	</body>

</html>