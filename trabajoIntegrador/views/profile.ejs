<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %> 
<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/header-logueado.ejs')  %> 
	<% }else { %>
		  <%- include('./partials/header.ejs')  %> 
	<% } %> 
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="../../images/users/<%= usuarioLogueado.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
						<a href="/users/edit/profile">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					
				</div>
				<p class=""></p>
				<div>
					<ul class="">
						<li><%= usuarioLogueado.usuarioProducto.length %> productos</li>
						<li>1400 seguidores</li>
						<li><%= usuarioLogueado.usuarioComentarios.length  %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < usuarioLogueado.usuarioProducto.length ; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detalle/<%= usuarioLogueado.usuarioProducto[i].id %>">
							<figure class="product-box_image">
								<img src="<%= usuarioLogueado.usuarioProducto[i].img %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2 class="nombrestyle"><%= usuarioLogueado.usuarioProducto[i].nombre %> </h2>
								<p class="descripcionstyle"> <%= usuarioLogueado.usuarioProducto[i].descripcion %></p>
								<p class="descripcionstyle"> Publicado por: <%= usuarioLogueado.nombre %></p>
								<p class="descripcionstyle">Comentarios: <%= usuarioLogueado.usuarioProducto[i].productoComentarios.length  %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>	
</html>