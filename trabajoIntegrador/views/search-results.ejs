<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %> 

<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/header-logueado.ejs')  %> 
	<% }else { %>
		  <%- include('./partials/header.ejs')  %> 
	<% } %> 
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<% if (listaProductos.length == 0) { %>
				<h3>No hay resultados para la busqueda</h3>
			<% }else{ %>
				<% for( let i = 0; i < listaProductos.length; i++ ) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/detalle/<%= listaProductos[i].id%> ">
								<figure class="product-box_image">
									<img src="<%= listaProductos[i].img %>" alt="cafetera moulinex">
								</figure>
								<article class="product-box_data">
									<h2 class="nombrestyle"><%= listaProductos[i].nombre %> </h2>
									<p class="descripcionstyle"> <%= listaProductos[i].descripcion %></p>
									<p class="descripcionstyle"> Publicado por: <%= listaProductos[i].productoUsuario.nombre %></p>
									<p class="descripcionstyle"> Comentarios: <%= listaProductos[i].productoComentarios.length  %></p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			<% } %>


	<!-- footer -->
	<%- include('./partials/footer') %> 
</body>

</html>